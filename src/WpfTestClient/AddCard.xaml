<Window x:Class="WpfTestClient.AddCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestClient"
        mc:Ignorable="d"
        Title="AddCard" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="danloadButton" Content="Загрузить фотографию" HorizontalAlignment="Left" Margin="63,166,0,0" VerticalAlignment="Top" Width="177" Height="41" RenderTransformOrigin="0.748,0.301" Click="danloadButton_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="20" Margin="63,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177" RenderTransformOrigin="-0.115,0.502"/>
        <Button x:Name="saveButton" Content="Сохранить" HorizontalAlignment="Left" Margin="63,247,0,0" VerticalAlignment="Top" Width="177" Height="33" Click="saveButton_Click"/>
        <Canvas HorizontalAlignment="Left" Height="350" Margin="387,33,0,0" VerticalAlignment="Top" Width="350">
            <Image x:Name="photos_show" Width="350" Height="350" RenderTransformOrigin="0.518,0.218"/>
        </Canvas>
        <Label x:Name="label" HorizontalAlignment="Left" Margin="63,43,0,0" VerticalAlignment="Top" Height="29" Width="177"/>
    </Grid>
</Window>
